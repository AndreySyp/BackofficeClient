<UserControl x:Class="BackofficeClient.Resources.UserControls.StackDoubleDatePicker"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BackofficeClient.Resources.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="AliceBlue">
        <StackPanel>
            <TextBlock Text="{Binding Header, RelativeSource={RelativeSource AncestorType=UserControl}}"/>
            <DatePicker SelectedDate="{Binding SelectedDateStart, RelativeSource={RelativeSource AncestorType=UserControl}}"/>
            <DatePicker SelectedDate="{Binding SelectedDateEnd, RelativeSource={RelativeSource AncestorType=UserControl}}"/>
        </StackPanel>
    </Grid>
</UserControl>
